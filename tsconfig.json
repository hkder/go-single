{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./public",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
